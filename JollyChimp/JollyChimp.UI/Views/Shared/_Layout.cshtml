<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - JollyChimp</title>

    <link rel="stylesheet" href="~/css/theme-vars.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/jolly-chimp.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/bootstrap-overrides.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"/>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>
    <script src="~/js/api-service.js"></script>
    <script src="~/js/jquery-validators.js"></script>
    <script src="~/js/form-field-generators.js"></script>
    <script src="~/js/toast.js"></script>
    <script src="~/js/data-tables.js"></script>
</head>
<body class="flex flex-column h-full w-full">
    <partial name="~/Views/Shared/_ConfirmDialog.cshtml" />
    <main role="main" class="d-flex flex-row">
        <div class="h-full">
            <partial name="~/Views/Shared/_Nav.cshtml" />
        </div>
        <div class="render-body-container">
             @RenderBody()
        </div>
    </main>
</body>
</html>